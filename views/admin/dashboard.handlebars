<div class="admin-dashboard">
    <div class="dashboard-header">
        <h1>Admin Dashboard</h1>
        <a href="/logout" class="btn-danger">Logout</a>
    </div>
    <div class="admin-stats">
        <div class="stat-card">
            <h3>Total Users</h3>
            <p>{{stats.totalUsers}}</p>
        </div>
        <div class="stat-card">
            <h3>Total Quizzes</h3>
            <p>{{stats.totalQuizzes}}</p>
        </div>
        <div class="stat-card">
            <h3>Active Today</h3>
            <p>{{stats.activeToday}}</p>
        </div>
        <div class="stat-card">
            <h3>Quizzes Taken Today</h3>
            <p>{{stats.quizzesToday}}</p>
        </div>
    </div>

    <!-- Quizzes Management Section -->
    <section class="quiz-section">
        <h2>Manage Quizzes</h2>
        <div class="search-bar">
            <input type="text" placeholder="Search quizzes..." id="quiz-search">
            <button class="btn-primary" id="search-button">Search</button>
        </div>
        <div class="quiz-grid" id="admin-quiz-list">
            {{#each quizzes}}
            <div class="quiz-card">
                <h3>{{this.title}}</h3>
                <p>{{this.description}}</p>
                <div class="quiz-meta">
                    <span>Questions: {{this.questionCount}}</span>
                    <span>Category: {{this.category}}</span>
                    <span>Created by: {{this.creator}}</span>
                </div>
                <div class="quiz-stats">
                    <span>Times Taken: {{this.timesTaken}}</span>
                    <span>Avg Score: {{this.averageScore}}%</span>
                </div>
                <div class="quiz-actions">
                    <button class="btn-primary" onclick="window.location.href='/quiz/{{this._id}}/review'">Review Quiz</button>
                    <button class="btn-danger" onclick="deleteQuiz('{{this._id}}')">Delete Quiz</button>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</div>